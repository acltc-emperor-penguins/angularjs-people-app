<h1>Interesting People!</h1>
<div ng-app="app">
  <div ng-controller="peopleCtrl">
    <div ng-repeat="person in people">
      <h2 ng-click="toggleBio(person)">{{ person.name }}</h2>
      <h3 ng-show="person.bioVisible">{{ person.bio }}</h3>
    </div>
    <div>
      Name: <input ng-model="newPersonName">
      Bio: <input ng-model="newPersonBio">
      <button ng-click="addPerson(newPersonName, newPersonBio)">Add Person</button>
    </div>
  </div>
</div>